{
    "manifest_version": 3,
    "name": "Dollar Cost Average Calculator",
    "description": "Calculate the average price",
    "version": "1.0.0",
    "icons": {
      "16": "logo/logo-16.png",
      "48": "logo/logo-48.png",
      "128": "logo/logo-128.png"
    },
    "action": {
      "default_title": "DCA Calculator",
      "default_popup": "popup/popup.html",
      "default_icon": "logo/icon.png"
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "service-worker.js"
    }
  }
  